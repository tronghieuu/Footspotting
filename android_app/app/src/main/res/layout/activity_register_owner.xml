<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_owner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBackOwnerResDangKy"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_navigate_before"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Đăng ký quán ăn"
            android:textColor="#D5CFCF"
            android:textSize="40dp"
            android:textStyle="italic"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btnUpdateOwnerResDangKy"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_true_red"
            android:background="?android:attr/selectableItemBackground"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResNameDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="tên quán"
                android:paddingHorizontal="5dp"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình Thức quán:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResTypeDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="hình thức"
                android:paddingHorizontal="5dp"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tỉnh/Thành phố:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResProvinceDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="tỉnh"
                android:paddingHorizontal="5dp"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quận/Huyện:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResDistrictDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="quận"
                android:paddingHorizontal="5dp"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResAddressDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="số nhà và tên đường"
                android:paddingHorizontal="5dp"
                android:maxLines="1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liên hệ:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <EditText
                android:id="@+id/edtOwnerResPhoneDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_newWhite"
                android:textSize="30dp"
                android:hint="sđt liên lạc"
                android:paddingHorizontal="5dp"
                android:inputType="numberDecimal"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giờ mở cửa:   "
                    android:textSize="30dp"
                    android:textColor="@color/color_newWhite"
                    android:paddingHorizontal="5dp" />
                <Button
                    android:background="@color/color_newWhite"
                    android:id="@+id/btn_ResOpenDangky"
                    android:onClick="onClickTimePickerButtonOpen"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30dp"
                    android:textColor="@color/color_black"
                    android:paddingHorizontal="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giờ đóng cửa:"
                    android:textSize="30dp"
                    android:textColor="@color/color_newWhite"
                    android:paddingHorizontal="5dp" />
                <Button
                    android:background="@color/color_newWhite"
                    android:id="@+id/btn_ResCloseDangky"
                    android:onClick="onClickTimePickerButtonClose"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30dp"
                    android:textColor="@color/color_black"
                    android:paddingHorizontal="5dp" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh đại diện:"
                android:textSize="30dp"
                android:textColor="@color/color_newWhite"
                android:paddingHorizontal="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPreviewDangKy"
                    android:layout_width="200dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnChonAnhDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_newWhite"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Chọn ảnh" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>